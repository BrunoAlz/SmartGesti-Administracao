# =============================================================================
# CONFIGURAÇÕES DO PORTFOLIO BACKEND - ARQUIVO .env EXEMPLO
# =============================================================================
# Copie este arquivo para .env e configure as variáveis para seu ambiente

# =============================================================================
# AMBIENTE
# =============================================================================
ENVIRONMENT=dev
DEBUG=True

# =============================================================================
# SEGURANÇA
# =============================================================================
SECRET_KEY=django-insecure-exemplo-mude-para-producao-123456789
DEV_SECRET_KEY=django-insecure-dev-key-apenas-para-desenvolvimento

# =============================================================================
# DATABASE
# =============================================================================
DB_NAME=portfolio_backend
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432
DB_SSL_MODE=prefer
DB_CONN_MAX_AGE=300

# Para desenvolvimento: usar SQLite (opcional)
USE_SQLITE_DEV=False

# =============================================================================
# CACHE / REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/1
CACHE_TIMEOUT=3600

# Para desenvolvimento: usar cache local (opcional)
USE_LOCAL_CACHE_DEV=False

# =============================================================================
# DOMÍNIOS E HOSTS
# =============================================================================
APEX_DOMAIN=lvh.me
ALLOWED_BASE_HOSTS=.localhost,.lvh.me
ALLOWED_HOSTS=localhost,127.0.0.1,*.lvh.me,*.localhost

# Para produção, especificar domínios reais:
# APEX_DOMAIN=meusite.com
# ALLOWED_BASE_HOSTS=.meusite.com
# ALLOWED_HOSTS=meusite.com,*.meusite.com,www.meusite.com

# =============================================================================
# CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LOGGING
# =============================================================================
LOG_DIR=logs
SLOW_DB_THRESHOLD_MS=1000

# ASAAS - Gateway de Pagamentos
ASAAS_API_KEY=$aact_
ASAAS_WALLET_ID=d273a3
ASAAS_ENVIRONMENT=sandbox
ASAAS_BASE_URL=https://sandbox.asaas.com/api/v3

# =============================================================================
# EMAIL (PRODUÇÃO)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app
DEFAULT_FROM_EMAIL=noreply@meusite.com

# =============================================================================
# SEGURANÇA PRODUÇÃO
# =============================================================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
PREPEND_WWW=False

# =============================================================================
# UPLOAD DE ARQUIVOS
# =============================================================================
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880

# =============================================================================
# MONITORAMENTO (SENTRY)
# =============================================================================
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
APP_VERSION=1.0.0

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_URL=/healthz/

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-example-key-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/odonto_premium

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Multi-tenant Configuration
APEX_DOMAIN=exemplo.com
ALLOWED_BASE_HOSTS=.exemplo.com,.lvh.me

# Logging Configuration
LOG_DIR=./logs
SLOW_DB_THRESHOLD_MS=100

# Development
CORS_ALLOW_ALL_ORIGINS=True

# JWT Configuration (optional)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Email (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Static/Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
